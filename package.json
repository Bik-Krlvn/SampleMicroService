{
  "name": "user-service",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:user": "nest start user-service",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "grpc:gen": "./grpc_gen.sh",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/user-service/test/jest-e2e.json"
  },
  "dependencies": {
    "@godaddy/terminus": "^4.4.1",
    "@grpc/proto-loader": "^0.5.5",
    "@juicycleff/nestjs-event-store": "^3.1.18",
    "@nestjs/common": "^7.0.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/cqrs": "^7.0.0",
    "@nestjs/graphql": "^7.6.0",
    "@nestjs/jwt": "^7.1.0",
    "@nestjs/microservices": "^7.4.2",
    "@nestjs/platform-express": "^7.0.0",
    "@nestjs/swagger": "^4.5.12",
    "@nestjs/terminus": "^7.0.1",
    "@nestjs/typeorm": "^7.1.0",
    "@types/bcryptjs": "^2.4.2",
    "apollo-server-express": "^2.16.1",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.9.1",
    "dotenv": "^8.2.0",
    "geteventstore-promise": "^3.2.1",
    "graphql": "^15.3.0",
    "graphql-tools": "^6.0.18",
    "grpc": "^1.24.3",
    "logform": "^2.2.0",
    "node-nats-streaming": "^0.3.2",
    "pg": "^8.3.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4",
    "strict-event-emitter-types": "^2.0.0",
    "typeorm": "^0.2.25",
    "winston": "^3.3.3",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.3",
    "@types/jest": "25.2.3",
    "@types/node": "^13.9.1",
    "@types/pg": "^7.14.4",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "3.0.2",
    "@typescript-eslint/parser": "3.0.2",
    "eslint": "7.1.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "google-protobuf": "^3.13.0",
    "grpc-tools": "^1.9.1",
    "jest": "26.0.1",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "26.1.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "ts-proto": "juicycleff/ts-proto",
    "ts-protoc-gen": "^0.12.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@service/common/(.*)": "<rootDir>/libs/common/src/$1",
      "@service/common": "<rootDir>/libs/common/src",
      "@service/proto-schema/(.*)": "<rootDir>/libs/proto-schema/src/$1",
      "@service/proto-schema": "<rootDir>/libs/proto-schema/src",
      "@service/contracts/(.*)": "<rootDir>/libs/contracts/src/$1",
      "@service/contracts": "<rootDir>/libs/contracts/src",
      "@service/core/(.*)": "<rootDir>/libs/core/src/$1",
      "@service/core": "<rootDir>/libs/core/src"
    }
  }
}
